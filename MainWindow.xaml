<Window x:Class="Memory_Test_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_Test_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid>
        <Grid Background="White">
            <Label Content="Cambridge Semantic Memory Test Battery" HorizontalAlignment="Left" Margin="340,120,0,0" VerticalAlignment="Top" Height="85" Width="928" FontSize="48"/>
            <Button Content="Begin" HorizontalAlignment="Left" Margin="640,300,0,0" VerticalAlignment="Top" Width="280" FontSize="48" Height="80" Click="Begin_Button_Click"/>
            <Button Content="Help" HorizontalAlignment="Left" Margin="640,400,0,0" VerticalAlignment="Top" Width="280" FontSize="48" Height="80" Click="Help_Button_Click"/>
            <Button Content="Exit" HorizontalAlignment="Left" Margin="640,500,0,0" VerticalAlignment="Top" Width="280" FontSize="48" Height="80" Click="Exit_Button_Click"/>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
        </Grid>
    </Grid>
</Window>
